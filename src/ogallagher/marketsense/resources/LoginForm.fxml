<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml/1">
	<stylesheets>
		<URL value="@LoginForm.css" />
	</stylesheets>
	
	<children>
		<!-- title -->
		<Label text="Login Form" styleClass="h1"></Label>
		
		<HBox fx:id="loginForm" spacing="8" alignment="CENTER">
			<children>
				<ListView fx:id="registeredUsers"></ListView>
				
				<GridPane>
					<children>
						<Label text="username:" GridPane.columnIndex="0" GridPane.rowIndex="0"></Label>
						<TextField fx:id="loginUsername" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"></TextField>
					</children>
				</GridPane>
			</children>
		</HBox>
	</children>
</VBox>

